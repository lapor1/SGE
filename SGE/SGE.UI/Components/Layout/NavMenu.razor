@rendermode InteractiveServer
@inject Logger log

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SGE.UI</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

         
        @if(Logueado)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="registro">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Registrarse
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="usuario">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Agregar Usuario
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="listarTramites">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Lista de Tramites
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="listarExpedientes">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Lista de Expediente
                </NavLink>
            </div>

            <div class="nav-item px-3">
            <NavLink class="nav-link" href="tramite">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Agregar Tramite
            </NavLink>
            </div>

        
        }
        

    </nav>
</div>
 
@code {
    bool Logueado = true;

    [Parameter] public int? id {get; set;}

    protected override void OnParametersSet()
    {
        if (log.Logueado)
        {
            Logueado = true;
        }
    }
}