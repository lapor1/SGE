@page "/iniciarSesion"
@rendermode InteractiveServer

<h3>Inicio de Sesión</h3>

<EditForm Model="@user" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="username">Nombre de Usuario</label>
        <InputText id="username" class="form-control" @bind-Value="user.Username" />
    </div>

    <div class="form-group">
        <label for="password">Contraseña</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="user.Password" />
    </div>

    <button type="submit" class="btn btn-primary">Conectar</button>
    <button type="button" class="btn btn-secondary" @onclick="NavigateToHome">Volver al Inicio</button>
</EditForm>

@code {
    private void HandleValidSubmit()
    {
        // Aquí puedes agregar la lógica para autenticar al usuario
        Console.WriteLine("Usuario: " + user.Username);
        Console.WriteLine("Contraseña: " + user.Password);
        
        // Redirige al usuario a la página principal si la autenticación es exitosa
        NavigationManager.NavigateTo("/");
    }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }

}