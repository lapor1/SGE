@page "/login"
@rendermode InteractiveServer
@inject NavigationManager Navegador
@inject CasoDeUsoUsuarioConsultaPorId consultarUsuario
@inject Logger log


    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión</title>
    <style>
        <!--
        /* Estilo general del cuerpo */
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            background-color: #f0f2f5; /* Color de fondo suave */
            font-family: Arial, sans-serif; /* Tipografía sencilla y clara */
            display: flex;
            justify-content: center; /* Centra el contenedor principal horizontalmente */
            align-items: center; /* Centra el contenedor principal verticalmente */
        }
        -->
        /* Contenedor que centra el formulario */
        .main-container {
            display: flex;
            justify-content: center; /* Centra el formulario horizontalmente */
            align-items: center; /* Centra el formulario verticalmente */
            width: 100%;
            height: 100%; /* Ocupa todo el área visible de la página */
        }
        /* Estilo del contenedor del formulario */
        .login-container {
            background: white; /* Fondo blanco */
            padding: 2rem; /* Espacio interior */
            border-radius: 10px; /* Bordes redondeados */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra para efecto de profundidad */
            width: 300px; /* Ancho fijo del contenedor */
            text-align: center; /* Centra el texto */
        }
        /* Estilo del título */
        .login-container h1 {
            margin-bottom: 1.5rem; /* Espacio debajo del título */
            color: #333; /* Color de texto oscuro */
        }
        /* Estilo de los campos de entrada */
        .form-control {
            width: 100%; /* Ancho completo del contenedor padre */
            padding: 0.75rem; /* Espacio interior */
            margin-bottom: 1rem; /* Espacio debajo de cada campo */
            border: 1px solid #ccc; /* Borde gris claro */
            border-radius: 5px; /* Bordes redondeados */
            box-sizing: border-box; /* Incluye el padding y el borde en el ancho total */
            font-size: 1rem; /* Tamaño de fuente */
        }
        /* Estilo del botón */
        .btn-primary {
            background-color: #007bff; /* Color de fondo azul */
            color: white; /* Color del texto */
            padding: 0.75rem; /* Espacio interior */
            border: none; /* Sin bordes */
            border-radius: 5px; /* Bordes redondeados */
            cursor: pointer; /* Cambia el cursor a una mano al pasar sobre el botón */
            width: 100%; /* Ancho completo del contenedor padre */
            font-size: 1rem; /* Tamaño de fuente */
            transition: background-color 0.3s; /* Transición suave para el cambio de color */
        }
        /* Estilo del botón al pasar el ratón */
        .btn-primary:hover {
            background-color: #0056b3; /* Color de fondo más oscuro */
        }
    </style>


    <!-- Contenedor principal para centrar el formulario -->
    <div class="main-container">
        <!-- Contenedor del formulario de inicio de sesión -->
        <div class="login-container">
            <!-- Título del formulario -->
            <h1>Inicio de Sesión</h1>
            <!-- Campo de entrada para el Id del usuario -->
            <input placeholder="Id" @bind="u.Id" class="form-control">
            <!-- Campo de entrada para la contraseña, se oculta el texto por seguridad -->
            <input type="password" placeholder="Contraseña" @bind="u.Contraseña" class="form-control">
            <!-- Botón para enviar el formulario -->
            <button class="btn btn-primary" @onclick="Aceptar">Aceptar</button>
        </div>
    </div>


@code {
    Usuario u = new Usuario();
    void Aceptar()
    {  
        Usuario? uR = consultarUsuario.Ejecutar(u.Id);
        if(uR != null)
        {
            //if(uR.Contraseña == u.Contraseña)
            //{
                log.IdUsuario = u.Id;
                log.Nombre = uR.Nombre;
                log.Logueado = true;

                //autorizacion.IsLoggedIn = true;
                
                // Pone al Admin con permisos de escritura
                if(u.Id == 1)
                {
                    log.SoloLectura = false;
                    Console.WriteLine("Usuario logueado con permisos de lectura y escritura");
                }
                else{
                    Console.WriteLine("Usuario logueado con permisos de solo lectura");
                }

                u = new Usuario();

                Navegador.NavigateTo($"/{u.Id}");
            //}
            //else
            //{
            //    Console.WriteLine("Contraseña incorrecta");
            //}
        }
        else
        {
            Console.WriteLine("Usuario no encontrado");
        }
    }
}
