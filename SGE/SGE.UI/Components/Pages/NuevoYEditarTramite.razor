@page "/tramite/{Id:int?}"
@rendermode InteractiveServer
@inject CasoDeUsoTramiteConsultaPorId consultarTramite
@inject CasoDeUsoTramiteModificacion modificarTramite
@inject CasoDeUsoTramiteAlta tramiteAlta
@inject NavigationManager Navegador

@if (!SoloLectura)
{
    @if (_esNuevoTramie)
    {
        <h3 class="text-primary">Agregando un nuevo Tramite</h3>
    }
    else
    {
        <h3 class="text-primary">Modificando al Tramite "@t.Id"</h3>
    }

    <div class="container mt-4">
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="expediente" class="form-label">Expediente Asociado</label>
                <input id="expediente" placeholder="Expediente Asociado" @bind="t.IdExpediente" class="form-control" />
            </div>
            <div class="col-md-6">
                <label for="tipoTramite" class="form-label">Tipo De Tramite</label>
                <input id="tipoTramite" placeholder="Tipo De Tramite" @bind="t.TipoTramite" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <label for="contenido" class="form-label">Contenido</label>
                <textarea id="contenido" placeholder="Contenido" @bind="t.Contenido" class="form-control" rows="4"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <button class="btn btn-primary" @onclick="Aceptar">Aceptar</button>
            </div>
        </div>
    </div>
}
else 
{
    <h3 class="text-danger text-center">Usted no tiene permisos</h3>
}

<style>
    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }
    h3 {
        text-align: center;
        margin-bottom: 20px;
    }
    .form-label {
        font-weight: bold;
    }
    .form-control {
        box-shadow: none;
        border-radius: 4px;
    }
    .btn-primary {
        display: block;
        width: 100%;
        padding: 10px;
        font-size: 16px;
    }
    .text-danger {
        font-weight: bold;
    }
</style>


@code {
    [Parameter]
    public bool SoloLectura { get; set; } = false;
    Tramite t = new Tramite();
    [Parameter] public int? Id {get; set; }
    [Parameter] public int IdUsuario {get; set; } = 1;
    bool _esNuevoTramie = true;
    protected override void OnParametersSet()
    {
        if(Id != null)
        {
           var t_hallado = consultarTramite.Ejecutar(Id.Value);
           if (t_hallado != null)
           {
               t = t_hallado;
               _esNuevoTramie = false;
           }
        }
    }

    void Aceptar()
    {
        if (_esNuevoTramie)
        {
            tramiteAlta.Ejecutar(t, IdUsuario);
        }
        else
        {
            modificarTramite.Ejecutar(t, IdUsuario);
        }
        t = new Tramite();
        Navegador.NavigateTo($"listarTramites/{IdUsuario}");
    }

}
